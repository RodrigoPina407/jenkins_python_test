pipeline {
    agent {
        node {
            label 'slave-node1'
        }
    }
    triggers {
        pollSCM '*/2 * * * *'
    }

    environment {
        PATH = "$HOME/.cargo/bin:$PATH"
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh '''
                cd myapp-rust
                ls
                echo $PATH
                cargo build
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh '''
                cd myapp-rust
                cargo test
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                cd myapp-rust
                cargo run
                '''
            }
        }
    }
}
