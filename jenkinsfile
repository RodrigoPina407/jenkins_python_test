pipeline {
    agent { 
        node {
            label 'slave-node1'
            }
      }
    triggers {
        pollSCM '*/2 * * * *'
        
    }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                cd myapp-rust
                ls
                source $HOME/.cargo/env
                export PATH=$HOME/.cargo/bin:$PATH
                cargo build
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                cd myapp-rust
                cargo test
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                cargo run
                '''
            }
        }
    }
}